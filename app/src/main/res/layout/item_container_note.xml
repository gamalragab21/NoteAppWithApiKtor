<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardNote"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    app:cardBackgroundColor="@color/colorDefaultNoteColor"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_3sdp">

    <LinearLayout
        android:id="@+id/layoutNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_list_note"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/titleNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_13ssp" />

        <TextView
            android:id="@+id/subtitleNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/rta_regular"
            android:includeFontPadding="false"
            android:textColor="@color/colorNoteSubtitleTextColor"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/urlItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:fontFamily="@font/rta_regular"
            android:autoLink="web"
            android:includeFontPadding="false"
            android:textColor="@color/colorNoteSubtitleTextColor"
            android:textSize="@dimen/_12ssp"
/>
        <TextView
            android:id="@+id/textDataTimeNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:fontFamily="@font/rta_regular"
            android:includeFontPadding="false"
            android:textColor="@color/colorNoteSubtitleTextColor"
            android:textSize="@dimen/_7ssp" />

        <ImageView
            android:id="@+id/ic_delete_note_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/ic_baseline_delete_forever_24"
            android:padding="@dimen/_12sdp"
            android:contentDescription="@string/app_name"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>